<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="@string/search_hot_word"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.gochiusa.wanandroid.widget.FlowLayout
        android:paddingHorizontal="15dp"
        android:id="@+id/flow_layout_search_hot_word"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
    <TextView
        android:id="@+id/tv_search_history"
        android:layout_margin="10dp"
        android:text="@string/search_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.gochiusa.wanandroid.widget.FlowLayout
        android:paddingHorizontal="15dp"
        android:id="@+id/flow_layout_search_history"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
    <Button
        android:layout_margin="10dp"
        android:id="@+id/btn_search_clear"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:text="@string/search_clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>